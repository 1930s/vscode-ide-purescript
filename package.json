{
  "name": "ide-purescript",
  "displayName": "PureScript IDE",
  "description": "PureScript IntelliSense, tooltip, errors with psc-ide",
  "version": "0.0.4",
  "publisher": "nwolverson",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:purescript"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "purescript.build",
        "title": "PureScript: Build"
      }
    ],
    "configuration": {
        "title": "PureScript configuration",
        "properties": {
            "purescript.pscIdeClientExe": {
                "type": "string",
                "default": "psc-ide-client",
                "description": "Location of psc-ide client executable (resolved wrt PATH)"
            },
            "purescript.pscIdeServerExe": {
                "type": "string",
                "default": "psc-ide-server",
                "description": "Location of psc-ide server executable (resolved wrt PATH)"
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
  },
  "extensionDependencies": [
    "nwolverson.language-purescript"
  ],
  "devDependencies": {
    "typescript": "^1.6.2",
    "vscode": "^0.10.6"
  },
  "dependencies": {
    "xregexp": "^3.0.0"
  }
}
